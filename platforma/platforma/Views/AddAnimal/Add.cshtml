@model platforma.Models.ViewModels.AddAnimalRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Animal</h1>

    </div>

</div>

<div class="container mt-5">
    <form asp-controller="AddAnimal" asp-action="Add" method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" required />
        </div>

        <div class="form-group">
            <label for="Species">Species:</label>
            <input type="text" class="form-control" id="Species" asp-for="Species" required />
        </div>

        <div class="form-group">
            <label for="Description">Description:</label>
            <textarea class="form-control" id="Description" asp-for="Description" rows="3" required></textarea>
        </div>

        <div class="form-group">
            <label for="ImageUrl">Color:</label>
            <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" />
        </div>

        

        <div class="form-group">
            <label for="Age">Age:</label>
            <input type="number" class="form-control" id="Age" asp-for="Age" required />
        </div>

        <div class="form-group">
            <label for="IsAvailableForAdoption">Is Available For Adoption:</label>
            <select class="form-control" id="IsAvailableForAdoption" asp-for="IsAvailableForAdoption" required>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Gender">Gender:</label>
            <select class="form-control" id="Gender" asp-for="Gender" required>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="City">City:</label>
            <input type="text" class="form-control" id="City" asp-for="City" required />
        </div>

        <button type="submit" class="btn btn-dark">Add Animal</button>
    </form>
</div>