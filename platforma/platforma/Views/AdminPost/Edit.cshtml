@model platforma.Models.ViewModels.EditPostRequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Post</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form asp-controller="AdminPost" asp-action="Edit" method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="Id" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Animal Name</label>
                <input type="text" id="AnimalName" class="form-control" asp-for="AnimalName" />
            </div>
            <div class="mb-3">
                <label class="form-label">Animal Description</label>
                <textarea class="form-control" id="AnimalDescription" asp-for="AnimalDescription" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Author</label>
                <input type="text" id="FeaturedImageUrl" class="form-control" asp-for="FeaturedImageUrl" />
            </div>
            <div class="mb-3">
                <label class="form-label">Published Date</label>
                <input type="date" id="PublishedDate" class="form-control" asp-for="PublishedDate" />
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="Visible" asp-for="Visible">
                <label class="form-check-label">Is Visible?</label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Update</button>
                <button type="submit" class="btn btn-danger ms-2" asp-controller="AdminPost" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
            </div>
        </form>
    }
    else
    {
        <p>Post not found!</p>
    }
</div>